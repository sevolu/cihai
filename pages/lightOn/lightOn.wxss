/* pages/lightOn/lightOn.wxss */
page{
  background: #2d1306;
}
.page_g{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height:100vh;
  background: url('http://a.lttgd.top/gongdeng/lightNum.jpg') no-repeat;
  background-size: 100% 100%;
  position: relative;
}
.navbox navigator:nth-child(1){
  background: url('http://a.lttgd.top/gongdeng/bot_1.jpg') no-repeat;
  background-size: 100% 100%;
}


.page_g .lightSnuff {
    width:226rpx;
height:252.5rpx;
margin:0 auto;
text-align:center;
box-sizing:border-box;
padding-top:27rpx;
margin-top:74rpx;

}

.page_g .lightSnuff.cur {
    background: url('http://a.lttgd.top/gongdeng/lampHuan.png') no-repeat;
    background-size: 100% 100%;
    -webkit-animation: lightSnuffcur 0.8s infinite;
    animation: lightSnuffcur 0.8s infinite
}

@-webkit-keyframes lightSnuffcur {
    0% {
        background: url('http://a.lttgd.top/gongdeng/lampHuan.png') no-repeat;
background-size: 100% 100%;
    }

    100% {
        background: url('http://a.lttgd.top/gongdeng/lampHuan-on.png') no-repeat;
background-size: 100% 100%;
    }
}
@keyframes lightSnuffcur {
    0% {
        background: url('http://a.lttgd.top/gongdeng/lampHuan.png') no-repeat;
background-size: 100% 100%;
    }

    100% {
        background: url('http://a.lttgd.top/gongdeng/lampHuan-on.png') no-repeat;
background-size: 100% 100%;
    }
}
.page_g .lightSnuff image{
 width: 176.5rpx;
 height: 192rpx;
}

.page_g .lightName{
  font-size:30rpx;
color:#ff8639;
line-height:30rpx;
width:100%;
text-align:center;
margin-top:3rpx;
}

.explain-all{ 
  margin: 0 90rpx;
  margin-top:115rpx;
  font-weight: bold;
  height: 279rpx;
}

.explain-t{
  text-align: center;
  font-size:30rpx;
  color: #af2900;
  padding-top:20rpx;
  margin-bottom: 10rpx;
}

.explain-b{
  font-size:30rpx;
  color: #333;
