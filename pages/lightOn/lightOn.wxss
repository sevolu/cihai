}
.explain-b view:nth-child(1){ margin-bottom: 10rpx;}
.dengBtn-list{ text-align: center; margin-top: 20rpx;}
.dengBtn-list .dengBtn{ 
  display: inline-block;
  width:126rpx;
  height:76rpx;
  background: url('http://a.lttgd.top/gongdeng/lampType.png') no-repeat;
background-size: 100% 100%;
font-size:30rpx;
  color: #722510;
  line-height: 76rpx;
  margin: 5rpx 5rpx;
  }
.dengBtn-list .dengBtn.cur{
  background: url('http://a.lttgd.top/gongdeng/lampType-on.png') no-repeat;
  background-size: 100% 100%;
  color: #ffc150;
}

.btn_dd{
width:440rpx;
height:110rpx;
margin:0 auto;
text-align:center;
box-sizing:border-box;
padding-top:0;
margin-top:0;
background: url('http://a.lttgd.top/gongdeng/lighted.png') no-repeat;
background-size: 100% 100%;
 -webkit-animation: btndd 0.8s infinite;
    animation: btndd 0.8s infinite
}

@-webkit-keyframes btndd {
